{% if tag contains 'gift-' %}
  {% assign gifts = gifts | plus: 1 %}
{% assign prod = tag | split: '_' | last %}
  {% render 'gift-code' product: all_products[prod], order: gifts, total: totalgifts, form_classes: form_cls %}
{% endif %}
