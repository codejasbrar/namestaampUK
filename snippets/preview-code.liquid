  {% elsif gifts > 0 %}
	<p class="start" text="Awesome! Click to choose your gift">Make a Selection</p>
  {% else %}
    {% if l_index > last_bndle %}
  <div class="row_grid_qnt"   style="width:100%;">
      <p text="Done! Take me to cart" attr_curr_id="{{ form_id }}" class="disabled btn_sp addtocart_btn bndl stiky_button{% if section.settings.enable_payment_button %} dynamic_paybtn{% endif %}{% if section.settings.shake_effect_enable %} js-cartButtonPro-addToCartButton hvr-wobble-horizontal{% endif %}">Make a Selection</p>
    </div>
  {% endif %}
	
  {% endif %}
